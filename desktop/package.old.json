{
  "name": "offgrid-desktop",
  "version": "1.0.0",
  "description": "OffGrid LLM Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.offgrid.llm",
    "productName": "OffGrid LLM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "README.md"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    }
  },
  "build": {
    "appId": "com.offgrid.llm",
    "productName": "OffGrid LLM",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../build/${os}/offgrid${ext}",
        "to": "bin/offgrid${ext}"
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
