{
  "name": "offgrid-llm-desktop",
  "version": "0.1.5",
  "description": "OffGrid LLM Desktop - Local AI Platform",
  "homepage": "https://github.com/takuphilchan/offgrid-llm",
  "author": {
    "name": "OffGrid LLM Team",
    "email": "team@offgrid-llm.dev"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder -mwl",
    "dist": "electron-builder",
    "package": "npm run build:all"
  },
  "build": {
    "appId": "com.offgrid.llm.desktop",
    "productName": "OffGrid LLM Desktop",
    "copyright": "Copyright Â© 2024-2025 OffGrid LLM Team",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json"
    ],
    "linux": {
      "extraResources": [
        {
          "from": "../build/linux/offgrid",
          "to": "bin/offgrid",
          "filter": ["**/*"]
        }
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png",
      "maintainer": "OffGrid LLM Team <team@offgrid-llm.dev>",
      "desktop": {
        "Name": "OffGrid LLM Desktop",
        "GenericName": "Local AI Platform",
        "Comment": "Run LLMs locally without internet",
        "Categories": "Development;Science;Education;",
        "Keywords": "ai;llm;ml;offline;"
      },
      "executableName": "offgrid-llm-desktop",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "extraResources": [
        {
          "from": "../build/macos/offgrid-amd64",
          "to": "bin/offgrid-amd64",
          "filter": ["**/*"]
        },
        {
          "from": "../build/macos/offgrid-arm64",
          "to": "bin/offgrid-arm64",
          "filter": ["**/*"]
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "OffGrid LLM Desktop ${version}",
      "writeUpdateInfo": false,
      "sign": false,
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "extraResources": [
        {
          "from": "../build/windows/offgrid.exe",
          "to": "bin/offgrid.exe",
          "filter": ["**/*"]
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OffGrid LLM Desktop",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "../LICENSE",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
